<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mlib="http://mlib.com/mvvm"
                    xmlns:mlibc="http://mlib.com/mvvm/converters">
    
    <Style TargetType="{x:Type mlib:WidgetImageButton}" x:Key="MenuButtons">
        <Setter Property="Width" Value="32"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="Margin" Value="0,2,0,2"/>
    </Style>

    <Style TargetType="{x:Type mlib:WidgetImageButton}" BasedOn="{StaticResource MenuButtons}" x:Key="BottomMenuButtons">
        <Setter Property="DockPanel.Dock" Value="Bottom"/>
    </Style>

    <Style TargetType="{x:Type mlib:WidgetImageButton}" BasedOn="{StaticResource MenuButtons}" x:Key="TopMenuButtons">
        <Setter Property="DockPanel.Dock" Value="Top"/>
    </Style>
    
</ResourceDictionary>